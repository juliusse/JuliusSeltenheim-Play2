# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET		/:langKey/home				controllers.Application.index(langKey:String)
GET		/:langKey/profile			controllers.Application.profile(langKey:String)
GET		/:langKey/skills			controllers.Application.skills(langKey:String)
GET		/:langKey/contact			controllers.Application.contact(langKey:String)
GET		/:langKey/projects			controllers.ProjectsController.index(langKey:String)
GET		/:langKey/projects/:projectType	controllers.ProjectsController.index2(langKey:String,projectType:String)
GET		/:langKey/Login				controllers.Application.login(langKey)
POST	/:langKey/Login				controllers.Application.login(langKey)
GET     /							controllers.Application.autoSelectLanguage()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
