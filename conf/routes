# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# async api
POST	/rest/project				@controllers.ProjectsController.changeProject()

# Home page

GET		/:langKey/home				@controllers.Application.index(langKey:String)
GET		/:langKey/profile			@controllers.Application.profile(langKey:String)

GET		/:langKey/contact			@controllers.Application.contact(langKey:String)

# skills
GET		/:langKey/skills			@controllers.SkillsController.index(langKey:String)
POST	/:langKey/skillgroup/add	@controllers.SkillsController.addSkillGroup(langKey:String)
POST	/:langKey/skillgroup/:skillGroupId/addSkill	@controllers.SkillsController.addSkill(langKey:String,skillGroupId:String)
POST	/:langKey/skillgroup/:skillGroupId/:skillName/setLevel	@controllers.SkillsController.setSkillLevel(langKey:String,skillGroupId:String,skillName:String)


GET		/:langKey/projects			@controllers.ProjectsController.index(langKey:String,projectType:String = "")
GET		/:langKey/projects/:projectType	@controllers.ProjectsController.index(langKey:String,projectType:String)

GET		/:langKey/project/add		@controllers.ProjectsController.renderAdd(langKey:String)
GET		/:langKey/project/:projectId @controllers.ProjectsController.renderEdit(langKey:String, projectId: String)
GET		/project/:projectId/image	@controllers.ProjectsController.getImage(projectId: String)

GET		/:langKey/Login				@controllers.UsersController.login(langKey)
POST	/:langKey/Login				@controllers.UsersController.login(langKey)
GET     /							@controllers.Application.autoSelectLanguage()




# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
